@model Movie

<form method="post" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <input asp-for="UserID" hidden />
    <input asp-for="ImagePath" hidden />
    <input asp-for="FilePath" hidden />
    <input asp-for="Title" hidden />
    <input asp-for="Genre" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete @Model.Title</h2>
            <hr />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit"
                        class="btn btn-danger form-control">
                    Delete
                </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Home"
                   asp-action="Index"
                   class="btn btn-secondary form-control border">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>
