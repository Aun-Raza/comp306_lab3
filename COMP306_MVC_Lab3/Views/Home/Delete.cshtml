@model Movie

<form method="post" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <input asp-for="UserID" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete @Model.Title</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Title" class="p-0">Title</label>
            <input asp-for="Title" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=Genre class="p-0">Genre</label>
            <input asp-for=Genre disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for=FilePath class="p-0">FilePath</label>
            <input asp-for=FilePath disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit"
                        class="btn btn-primary form-control">
                    Delete
                </button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Home"
                   asp-action="Index"
                   class="btn btn-secondary form-control border">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>
